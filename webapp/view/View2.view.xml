<mvc:View controllerName="com.kpmg.exercise4.controller.View2" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:f="sap.ui.layout.form">
	<Page
		id="View2"
		title="Room"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel
				id="Room"
				width="auto"
				class="sapUiResponsiveMargin sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{RoomNumber}" level="H2"/>
						<ToolbarSpacer />
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
						columnsL="1" columnsM="1">
						<f:content>
							<Label text="Room Number"/>
							<Text text="{RoomNumber}"/>
							<Label text="Number of Beds"/>
							<Text text="{BedsNumber}"/>
							<Label text="Is Full"/>
							<Text text="{IsFull}"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>